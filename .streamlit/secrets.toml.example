# Streamlit Cloud Secrets Configuration
# Copy these values to your Streamlit Cloud app settings:
# App Dashboard > Settings > Secrets

# =============================================================================
# DATABASE - Use external PostgreSQL (Railway recommended)
# =============================================================================
# Get from Railway.app after creating PostgreSQL database
DATABASE_URL = "postgresql://postgres:password@region.railway.app:5432/railway"

# =============================================================================
# LLM APIs (Required)
# =============================================================================
OPENAI_API_KEY = "sk-your-openai-key-here"
ANTHROPIC_API_KEY = "sk-ant-your-key-here"  # Optional

# =============================================================================
# DATA SOURCE APIs
# =============================================================================
TAVILY_API_KEY = "tvly-your-key"
CRUNCHBASE_API_KEY = "your-key"
SERPAPI_KEY = "your-key"

# Source toggles (true/false)
ENABLE_TAVILY = true
ENABLE_WAYBACK = true
ENABLE_CRUNCHBASE = true
ENABLE_SERPAPI = false
ENABLE_WEB_SCRAPER = true

# =============================================================================
# EMAIL (For backups)
# =============================================================================
SMTP_HOST = "smtp.gmail.com"
SMTP_PORT = 587
SMTP_USERNAME = "alonof27@gmail.com"
SMTP_PASSWORD = "your-gmail-app-password"
BACKUP_EMAIL = "alonof27@gmail.com"

# =============================================================================
# GITHUB (For backup storage)
# =============================================================================
GITHUB_TOKEN = "ghp_your-token"
GITHUB_REPO = "Alon2303/SBV-ANALYSIS"
GITHUB_BACKUP_PATH = "backups/"

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT = "production"
LOG_LEVEL = "INFO"
MAX_CONCURRENT_ANALYSES = 5

# Note: In Streamlit Cloud, these are accessed via:
# import streamlit as st
# api_key = st.secrets["OPENAI_API_KEY"]

