# SBV Pipeline Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
# Local development (SQLite - simple, no setup needed)
DATABASE_URL=sqlite:///data/sbv.db

# OR use PostgreSQL (recommended for Streamlit Cloud)
# DATABASE_URL=postgresql://user:password@localhost:5432/sbv_db
# For Railway: postgresql://postgres:password@region.railway.app:5432/railway

# =============================================================================
# LLM APIs (Required for analysis)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here  # Optional alternative

# =============================================================================
# DATA SOURCE APIs
# =============================================================================

# Tavily (AI-powered search) - RECOMMENDED
# Free tier: 1,000 searches/month
# Sign up: https://tavily.com
TAVILY_API_KEY=tvly-your-key-here
ENABLE_TAVILY=true

# Crunchbase (Startup data)
# Free tier: Basic company info
# Sign up: https://www.crunchbase.com/
CRUNCHBASE_API_KEY=your-crunchbase-key
ENABLE_CRUNCHBASE=true

# SerpAPI (Google Search)
# Free tier: 100 searches/month
# Sign up: https://serpapi.com
SERPAPI_KEY=your-serpapi-key
ENABLE_SERPAPI=false

# Wayback Machine (FREE - no key needed)
ENABLE_WAYBACK=true

# Web Scraper (Built-in)
ENABLE_WEB_SCRAPER=true

# =============================================================================
# EMAIL (For database backups)
# =============================================================================
# Gmail SMTP (recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alonof27@gmail.com
SMTP_PASSWORD=your-gmail-app-specific-password
BACKUP_EMAIL=alonof27@gmail.com

# Alternative: SendGrid (more reliable)
# SENDGRID_API_KEY=SG.your-key
# SENDGRID_FROM_EMAIL=alonof27@gmail.com

# =============================================================================
# GITHUB (For backup storage)
# =============================================================================
GITHUB_TOKEN=ghp_your-github-token
GITHUB_REPO=Alon2303/SBV-ANALYSIS
GITHUB_BACKUP_PATH=backups/

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_ANALYSES=5

# LLM Settings
DEFAULT_LLM_PROVIDER=openai  # or "anthropic"
DEFAULT_MODEL=gpt-4-turbo-preview
TEMPERATURE=0.3
MAX_TOKENS=4000
